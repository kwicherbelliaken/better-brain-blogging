{
  "exclude": ["./cypress"],
  "include": ["remix.env.d.ts", "*.d.ts", "app/*.ts", "/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "types": ["node", "jest"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "fuzzy-scrawl-styles": ["./node_modules/fuzzy-scrawl/build/index.css"],
      "animejs": ["animejs/lib/anime.es.js"]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  }
}
